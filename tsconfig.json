{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["components/*"],
      "agile-design": ["components/index.ts"]
    }
  },
  "include": [
    "components",
    "typings",
    ".dumirc.ts",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "esm"
  ]
}